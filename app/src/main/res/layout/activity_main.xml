<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label1_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EL AHORCADO"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagen1_start"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:src="@drawable/ic_action_accessibility" />

            <TextView
                android:id="@+id/label2_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué clase de animal caza ratones?"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/caja1_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="respuesta..."
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#8E24AA" />

            <Button
                android:id="@+id/boton1_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACEPTAR" />

            <TextView
                android:id="@+id/label3_start"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="TE QUEDAN 5 INTENTOS..."
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>